{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "idoc",
  "version": "1.26.5",
  "description": "Simple document generation tool. Dependence Node.js run.",
  "homepage": "https://jaywcjlove.github.io/idoc/",
  "author": "kenny wang <wowohoo@qq.com>",
  "type": "module",
  "main": "./lib/index.js",
  "exports": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "idoc": "lib/idoc.js"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaywcjlove/idoc.git"
  },
  "keywords": [
    "idoc",
    "markdown",
    "api",
    "document",
    "tool"
  ],
  "files": [
    "lib",
    "template",
    "themes"
  ],
  "scripts": {
    "start": "node lib/idoc.js -w",
    "doc": "node lib/idoc.js",
    "watch": "tsbb watch",
    "build": "tsbb build",
    "prettier": "prettier --write --ignore-unknown \"**/*.{js,ts,css,json}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,ts,css,json}": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@types/ejs": "^3.1.0",
    "@types/fs-extra": "~9.0.13",
    "@types/inquirer": "^9.0.0",
    "@types/micromatch": "^4.0.2",
    "@types/minimist": "~1.2.2",
    "@uiw/formatter": "~2.0.0",
    "@wcj/markdown-to-html": "^2.0.9",
    "auto-config-loader": "^1.6.0",
    "chokidar": "^3.5.3",
    "ejs": "^3.1.6",
    "fs-extra": "~10.1.0",
    "image2uri": "^2.0.0",
    "inquirer": "^9.0.0",
    "micromatch": "^4.0.5",
    "minimist": "~1.2.6",
    "recursive-readdir-files": "^2.3.0",
    "rehype-autolink-headings": "~6.1.1",
    "rehype-format": "^4.0.1",
    "rehype-ignore": "~1.0.0",
    "rehype-minify-whitespace": "^5.0.1",
    "rehype-slug": "~5.1.0",
    "yaml": "^2.0.0"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "tsbb": "^4.1.5"
  }
}
